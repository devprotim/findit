# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=1d

# Logging
LOG_LEVEL=info

# CORS Configuration (Optional - for specific frontend domains)
ALLOWED_ORIGINS=https://your-vercel-app.vercel.app
